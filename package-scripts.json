{
  "description": "Add these scripts to your package.json files for easy database management",
  "backend_package_json_scripts": {
    "setup-db": "node scripts/setup-database.js",
    "reset-db": "node scripts/setup-database.js",
    "clear-db": "node -e \"require('./scripts/setup-database.js').clearDatabase().then(() => process.exit())\"",
    "create-indexes": "node -e \"require('./scripts/setup-database.js').createIndexes().then(() => process.exit())\"",
    "dev-with-db": "npm run setup-db && npm run dev"
  },
  "root_package_json_scripts": {
    "setup": "node backend/scripts/setup-database.js",
    "quick-setup": "node backend/scripts/setup-database.js && echo 'Database ready! Start backend: cd backend && npm run dev' && echo 'Start frontend: cd frontend && npm run dev'",
    "reset-dev": "node backend/scripts/setup-database.js",
    "dev-backend": "cd backend && npm run dev",
    "dev-frontend": "cd frontend && npm run dev"
  },
  "usage_examples": [
    {
      "command": "npm run setup",
      "description": "Set up database with sample data"
    },
    {
      "command": "npm run reset-dev", 
      "description": "Reset database for fresh development"
    },
    {
      "command": "npm run dev-backend",
      "description": "Start backend server"
    },
    {
      "command": "npm run dev-frontend", 
      "description": "Start frontend server"
    }
  ],
  "environment_variables": {
    "MONGODB_URI": "mongodb://localhost:27017/bhoomi-setu",
    "NODE_ENV": "development"
  },
